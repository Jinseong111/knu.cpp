#include <iostream>
using namespace std;

class Ram {
    char mem[100 * 1024]; 
    int size;
public:
    Ram() { size = 100 * 1024; } 
    char read(int address) { return mem[address]; } 
    void write(int address, char value) { mem[address] = value; } 
};

int main() {
    Ram ram;
    ram.write(100, 20); 
    ram.write(101, 30); 

    char res = ram.read(100); 
    ram.write(102, res + ram.read(101)); 

    cout << "102 번지의 값 = " << (int)ram.read(102) << endl; 

    return 0;
}
